<?xml version="1.0" encoding="utf-8"?>
<LinearLayout style="@style/NumberPickerContainer"
    android:gravity="center_vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/control_pre"
        android:src="@mipmap/icon_num_del"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/NumberPickerControlButton.Pre"
        />

    <EditText
        android:id="@+id/number"
        style="@style/NumberPickerEditText"
        android:cursorVisible="false"
        />

    <ImageView
        android:id="@+id/control_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/icon_num_add"
        style="@style/NumberPickerControlButton.Next"/>

</LinearLayout>