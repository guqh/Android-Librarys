<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/navicon_icon"
            style="@style/NavIconImage"
            tools:src="@android:drawable/btn_star_big_off" />


        <RelativeLayout
            android:layout_weight="1"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <com.zthink.ui.widget.BadgeView
                android:id="@+id/navicon_badge"
                android:gravity="center"
                android:layout_marginRight="10dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:textSize="10sp"
                style="@style/NavIconBadge" />
            <TextView
                android:id="@+id/navicon_title"
                style="@style/NavIconTitle"
                tools:text="title" />
        </RelativeLayout>
    </LinearLayout>

</merge>